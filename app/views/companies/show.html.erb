<section class="h-[calc(100vh-6rem)]" aria-labelledby="section-1-title">
  <h2 class="sr-only" id="section-1-title">Create a Ride</h2>
  <div class="h-full overflow-hidden rounded-lg bg-white shadow ">
    <div class="p-6 h-full">
      <%= form_with model:[@company, Ride.new], data: {controller: "create-ride", "create-ride-target": "form"}, class: "relative h-full" do |form| %>
        <div data-create-ride-target="map" class="w-full h-full rounded"></div>
      <% end %>
    </div>
  </div>
</section>
